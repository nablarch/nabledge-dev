{
  "priority_1_exclusions": [
    {
      "pattern": "**/.textlint/**",
      "reason": "Test files and tooling excluded"
    },
    {
      "pattern": "**/batch/jsr352/**",
      "reason": "Jakarta Batch excluded per specification"
    },
    {
      "pattern": "**/messaging/mom/**",
      "reason": "MOM Messaging excluded per specification"
    },
    {
      "pattern": "**/messaging/db/**",
      "reason": "DB Messaging (Resident Batch) excluded per specification"
    },
    {
      "pattern": "**/messaging/**",
      "reason": "Messaging excluded per specification",
      "note": "Catch-all for messaging not covered by mom/db patterns"
    },
    {
      "pattern": "**/web/**",
      "reason": "Web applications (JSP/UI) excluded per specification",
      "except": "**/web_service/**"
    }
  ],
  "priority_2_inclusions": [
    {
      "pattern": "**/batch/nablarch_batch/**",
      "categories": ["batch-nablarch"]
    },
    {
      "pattern": "**/web_service/rest/**",
      "categories": ["rest"]
    },
    {
      "pattern": "**/web_service/http_messaging/**",
      "categories": ["http-messaging"]
    },
    {
      "pattern": "**/web_service/**",
      "categories": ["rest"],
      "note": "Default web_service to REST if not http_messaging"
    },
    {
      "pattern": "**/handlers/batch/**",
      "categories": ["handler", "batch-nablarch"]
    },
    {
      "pattern": "**/handlers/rest/**",
      "categories": ["handler", "rest"]
    },
    {
      "pattern": "**/handlers/web_service/**",
      "categories": ["handler"]
    },
    {
      "pattern": "**/handlers/common/**",
      "categories": ["handler"]
    },
    {
      "pattern": "**/handlers/**",
      "categories": ["handler"]
    },
    {
      "pattern": "**/library/**",
      "categories": ["library"]
    },
    {
