  "dev_guide_filename_patterns": [
    {
      "pattern": "**/*パターン*.md",
      "categories": ["dev-guide-pattern"]
    },
    {
      "pattern": "**/*pattern*.md",
      "categories": ["dev-guide-pattern"]
    },
    {
      "pattern": "**/*アンチパターン*.md",
      "categories": ["dev-guide-anti"]
